<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0"><i class="bi bi-journal-text me-2"></i>Notes</h1>
  <a href="/notes/new" class="btn btn-primary"><i class="bi bi-plus"></i> New</a>
  </div>

<div class="row g-3">
  <% if (notes.length === 0) { %>
    <div class="col-12 text-muted">No notes yet.</div>
  <% } %>
  <% notes.forEach(n => { %>
    <div class="col-md-6">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title mb-1"><%= n.title %></h5>
          <div class="small text-muted mb-2"><%= n.tags %></div>
          <p class="card-text"><%= n.content %></p>
        </div>
        <div class="card-footer d-flex gap-2">
          <a class="btn btn-sm btn-outline-secondary" href="/notes/<%= n.id %>/edit"><i class="bi bi-pencil"></i> Edit</a>
          <form method="post" action="/notes/<%= n.id %>/delete" onsubmit="return confirm('Delete this note?')">
            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i> Delete</button>
          </form>
        </div>
      </div>
    </div>
  <% }); %>
  </div>


