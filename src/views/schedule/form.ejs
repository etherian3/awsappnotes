<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0"><%= title %></h1>
  <a href="/schedule" class="btn btn-outline-secondary">Back</a>
  </div>

<form method="post" action="<%= item.id ? '/schedule/' + item.id : '/schedule' %>">
  <div class="row g-3">
    <div class="col-md-6">
      <label class="form-label">Title</label>
      <input class="form-control" name="title" value="<%= item.title || '' %>" required>
    </div>
    <div class="col-md-3">
      <label class="form-label">Date</label>
      <input type="date" class="form-control" name="date" value="<%= item.date || '' %>">
    </div>
    <div class="col-md-3">
      <label class="form-label">Time</label>
      <input type="time" class="form-control" name="time" value="<%= item.time || '' %>">
    </div>
    <div class="col-md-6">
      <label class="form-label">Location</label>
      <input class="form-control" name="location" value="<%= item.location || '' %>">
    </div>
    <div class="col-12">
      <label class="form-label">Note</label>
      <input class="form-control" name="note" value="<%= item.note || '' %>">
    </div>
  </div>
  <div class="mt-3">
    <button class="btn btn-primary">Save</button>
  </div>
</form>


