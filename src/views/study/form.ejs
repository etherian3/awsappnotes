<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0"><%= title %></h1>
  <a href="/study" class="btn btn-outline-secondary">Back</a>
  </div>

<form method="post" action="<%= item.id ? '/study/' + item.id : '/study' %>">
  <div class="row g-3">
    <div class="col-md-4">
      <label class="form-label">Subject</label>
      <input class="form-control" name="subject" value="<%= item.subject || '' %>" required>
    </div>
    <div class="col-md-8">
      <label class="form-label">Topic</label>
      <input class="form-control" name="topic" value="<%= item.topic || '' %>" required>
    </div>
    <div class="col-12">
      <label class="form-label">Content</label>
      <textarea class="form-control" name="content" rows="6" required><%= item.content || '' %></textarea>
    </div>
    <div class="col-12">
      <label class="form-label">Resources</label>
      <input class="form-control" name="resources" value="<%= item.resources || '' %>">
    </div>
  </div>
  <div class="mt-3">
    <button class="btn btn-primary">Save</button>
  </div>
</form>


