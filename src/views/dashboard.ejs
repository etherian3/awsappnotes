<div class="d-flex align-items-center mb-4">
  <h1 class="h3 mb-0">Dashboard</h1>
</div>

<div class="row g-3 mb-4">
  <div class="col-md-2 col-6">
    <div class="card text-center">
      <div class="card-body">
        <div class="h4"><i class="bi bi-journal-text me-1"></i><%= stats.notes %></div>
        <div class="text-muted small">Notes</div>
      </div>
    </div>
  </div>
  <div class="col-md-2 col-6">
    <div class="card text-center">
      <div class="card-body">
        <div class="h4"><i class="bi bi-cash-coin me-1"></i><%= stats.finance %></div>
        <div class="text-muted small">Finance</div>
      </div>
    </div>
  </div>
  <div class="col-md-2 col-6">
    <div class="card text-center">
      <div class="card-body">
        <div class="h4"><i class="bi bi-calendar-event me-1"></i><%= stats.schedule %></div>
        <div class="text-muted small">Schedule</div>
      </div>
    </div>
  </div>
  <div class="col-md-2 col-6">
    <div class="card text-center">
      <div class="card-body">
        <div class="h4"><i class="bi bi-alarm me-1"></i><%= stats.reminders %></div>
        <div class="text-muted small">Reminders</div>
      </div>
    </div>
  </div>
  <div class="col-md-2 col-6">
    <div class="card text-center">
      <div class="card-body">
        <div class="h4"><i class="bi bi-mortarboard me-1"></i><%= stats.study %></div>
        <div class="text-muted small">Study</div>
      </div>
    </div>
  </div>
</div>

<div class="row g-3">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-journal-text me-1"></i>Recent Notes</span>
        <a href="/notes/new" class="btn btn-sm btn-primary"><i class="bi bi-plus"></i> Add</a>
      </div>
      <ul class="list-group list-group-flush">
        <% if (recent.notes.length === 0) { %>
          <li class="list-group-item text-muted">No notes yet.</li>
        <% } %>
        <% recent.notes.forEach(n => { %>
          <li class="list-group-item"><strong><%= n.title %></strong><div class="small text-muted"><%= (n.tags||'') %></div></li>
        <% }) %>
      </ul>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-alarm me-1"></i>Upcoming Reminders</span>
        <a href="/reminders/new" class="btn btn-sm btn-primary"><i class="bi bi-plus"></i> Add</a>
      </div>
      <ul class="list-group list-group-flush">
        <% if (recent.reminders.length === 0) { %>
          <li class="list-group-item text-muted">No reminders yet.</li>
        <% } %>
        <% recent.reminders.forEach(r => { %>
          <li class="list-group-item"><%= r.title %> <span class="badge bg-secondary"><%= r.dueDate %> <%= r.dueTime %></span></li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>


